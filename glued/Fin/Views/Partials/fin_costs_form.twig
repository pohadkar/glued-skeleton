<form action="{{ url_for('fin.costs.api01') }}" method="post" autocomplete="off" id="{{ fin_costs_id }}_form">

<div class="card card-primary">
<div class="card-header">
<h4>Basic accounting</h4>
</div>
<div class="card-body p-0">

  <div class="form-row">
    <div class="form-group col-md-6">
      <label>{{ __('Offset') }}* <a href="#" data-toggle="modal" data-id="" data-uri="" data-name="" data-domain="" data-driver="" data-target="#contacts_items_create_modal"><i class="far fa-plus-square text-dark"></i></a></label>
      <div class="input-group">
        <input type="text" class="form-control" name="data[0][offset]" required placeholder="{{ __('Person / Organization') }}" id="{{ fin_costs_id }}_form_offset_name">
      </div>
    </div> 
    <div class="form-group col-md-3">
      <label>{{ __('Reference') }}*</label>
      <div class="input-group">
        <input type="text" class="form-control" name="data[0][ref]" required placeholder="Invoice #" id="{{ fin_costs_id }}_form_issue_dt">
      </div>
    </div>
    <div class="form-group col-md-3">
      <label>{{ __('Issue date') }}*</label>
      <div class="input-group">
        <input type="text" class="form-control datepicker" name="data[0][dt]" required placeholder="RRRR-MM-DD"id="{{ fin_costs_id }}_form_issue_dt">
      </div>
    </div>  
  </div>
  <div class="form-row">

    <div class="form-group col-md-3">
      <label>{{ __('Volume excl. VAT') }}</label>
      <div class="input-group">
        <input type="text" class="form-control" name="data[0][volume_exvat]" required placeholder="{{ __('12345.67') }}" id="{{ fin_costs_id }}_form_volume_exvat">
      </div>
    </div>
    <div class="form-group col-md-3">
      <label>{{ __('Volume incl. VAT') }}</label>
      <div class="input-group">
        <input type="text" class="form-control" name="data[0][volume_invat]" required placeholder="{{ __('12345.67') }}" id="{{ fin_costs_id }}_form_volume_invat">
      </div>
    </div>
    <div class="form-group col-md-3">
      <label>{{ __('Currency') }}</label>
      <select class="form-control select2" name="data[0][currency]" required style="width: 100%" id="{{ fin_costs_id }}_form_currency">
        {% for cur in currencies %}
        <option value="{{ cur.alpha3 }}" {% if cur.alpha3 == 'CZK' %}selected{% endif %}>{{ cur.alpha3 }}</option>
        {% endfor %}
      </select>
    </div>
    <div class="form-group col-md-3">
      <label>{{ __('Issue date') }}*</label>
      <div class="input-group">
        <input type="text" class="form-control datepicker" name="data[0][dt]" required placeholder="RRRR-MM-DD"id="{{ fin_costs_id }}_form_issue_dt">
      </div>
    </div>
  </div>
  <div class="form-row"> 
    <div class="form-group col-md-6">
      <label>{{ __('Project') }}* <a href="#"><i class="far fa-plus-square text-dark"></i></a></label>
      <div class="input-group">
        <input type="text" class="form-control" name="data[0][offset]" required placeholder="{{ __('Name Surname, (Organization)') }}" id="{{ fin_costs_id }}_form_offset_name">
      </div>
    </div>
    <div class="form-group col-md-6">
      <label>{{ __('Internal comment') }}</label>
      <div class="input-group">
        <input type="text" class="form-control" name="data[0][comment]" id="{{ fin_costs_id }}_form_comment">
      </div>
    </div>   
  </div>  

</div>
</div>

<div class="card card-secondary">
<div class="card-header">
<h4>Cost types and analytics</h4>
<button type="submit" class="btn btn-warning mt-1">-</button>
<button type="submit" class="btn btn-success mt-1">+</button>
<span style="padding-left: 2em">Unallocated: 3233.22</span>
</div>
<div class="card-body p-0">

  <div class="form-row"> 
    <div class="form-group col-md-3">
      <label>{{ __('Volume excl. VAT') }}</label>
      <div class="input-group">
        <input type="text" class="form-control" name="data[0][volume_exvat]" required placeholder="{{ __('12345.67') }}" id="{{ fin_costs_id }}_form_volume_exvat">
      </div>
    </div>  
    <div class="form-group col-md-9">
      <label>{{ __('Cost type') }}</label>
      <select class="form-control select2" name="data[0][currency]" required style="width: 100%" id="{{ fin_costs_id }}_form_currency">
        {% for k, v in cost_types %}
        <option value="{{ k }}">{{ k }} {{ v }}</option>
        {% endfor %}
      </select>
    </div>
  </div>
</div>
</div>

<div class="card card-secondary">
<div class="card-header">
<h4>Order allocation</h4>
<button type="submit" class="btn btn-warning mt-1">-</button>
<button type="submit" class="btn btn-success mt-1">+</button>
<span style="padding-left: 2em">Unallocated: 3233.22</span>
</div>
<div class="card-body p-0">
  <div class="form-row"> 
    <div class="form-group col-md-3">
      <label>{{ __('Volume') }}</label>
      <div class="input-group">
        <input type="text" class="form-control" name="data[0][volume_exvat]" required placeholder="{{ __('12345.67') }}" id="{{ fin_costs_id }}_form_volume_exvat">
      </div>
    </div>  
    <div class="form-group col-md-3">
      <label>{{ __('Percentage') }}</label>
      <div class="input-group">
        <input type="text" class="form-control" name="data[0][volume_exvat]" required placeholder="{{ __('12345.67') }}" id="{{ fin_costs_id }}_form_volume_exvat">
      </div>
    </div>  
    <div class="form-group col-md-6">
      <label>{{ __('Order') }}* <a href="#"><i class="far fa-plus-square text-dark"></i></a></label>
      <div class="input-group">
        <input type="text" class="form-control" name="data[0][offset]" required placeholder="{{ __('Name Surname, (Organization)') }}" id="{{ fin_costs_id }}_form_offset_name">
      </div>
    </div>

  </div>
</div>
</div>



  </div>
    <button type="submit" class="btn btn-primary">{{ __('Save') }}</button>
  </div>
</form>

